{
  "name": "unit-test-helper",
  "displayName": "Testify - Unit Test Helper",
  "publisher": "san3a",
  "repository": {
    "type": "git",
    "url": "https://github.com/saneag/unit-test-extension"
  },
  "icon": "assets/testify.webp",
  "description": "A VSCode extension to help you create unit test files quickly and easily.",
  "version": "0.0.15",
  "pricing": "Free",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/main.js",
  "contributes": {
    "commands": [
      {
        "command": "testify.createTestFile",
        "title": "Testify: Create Test File"
      },
      {
        "command": "testify.openTestFile",
        "title": "Testify: Open Test File"
      },
      {
        "command": "testify.openSourceFile",
        "title": "Testify: Open Source File"
      },
      {
        "command": "testify.createTestFilesForSelectedDirectory",
        "title": "Create Test Files"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "testify.createTestFilesForSelectedDirectory",
          "when": "explorerResourceIsFolder == true"
        }
      ],
      "explorer/context": [
        {
          "command": "testify.createTestFilesForSelectedDirectory",
          "when": "explorerResourceIsFolder == true",
          "group": "1_modification"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Testify",
      "properties": {
        "testify.openTestFile": {
          "type": "boolean",
          "default": true,
          "description": "Automatically open the newly created test file in the editor after creation."
        },
        "testify.openSourceFile": {
          "type": "boolean",
          "default": true,
          "description": "Automatically open the source file in the editor after creating or opening a test file."
        },
        "testify.testDirectoryNames": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "test",
            "__test__",
            "tests",
            "__tests__"
          ],
          "description": "An array of directory names to look for when searching for test files."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.104.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "typescript": "^5.9.3",
    "ts-loader": "^9.5.4",
    "webpack": "^5.102.0",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
